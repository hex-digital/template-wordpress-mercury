{
  "name": "hex-digital/template-wordpress-mercury",
  "description": "Template for a Mercury-powered WordPress website",
  "homepage": "https://www.github.com/hex-digital/template-wordpress-mercury",
  "authors": [
    {
      "name": "Sirwan Qutbi",
      "role": "Developer"
    },
    {
      "name": "Jamie Warburton",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://www.github.com/hex-digital/template-wordpress-mercury/issues"
  },
  "scripts": {
    "lint": ["phpcs ./"],
    "lint:fix": ["phpcs ./; phpcbf ./"]
  },
  "autoload": {
    "psr-4": {
      "Features\\": "features",
      "Inc\\": "includes",
      "Lib\\": "includes/libraries"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5",
    "wp-coding-standards/wpcs": "^2.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpcsstandards/phpcsextra": "^1.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "vlucas/phpdotenv": "^5.2",
    "oscarotero/env": "^2.1"
  }
}
